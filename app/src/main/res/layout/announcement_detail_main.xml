<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:padding="20dp"
        android:orientation="vertical"
        tools:showIn="@layout/activity_annoucement_detail"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
            android:id="@+id/tv_annoucement_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/annoucement_detail_title"
            android:text="AIOUS"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/tv_annoucement_detail_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20/10/1092"/>

    <TextView
            android:id="@+id/tv_annoucement_detail_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>
</LinearLayout>