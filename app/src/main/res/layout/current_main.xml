<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:orientation="vertical"
            android:padding="10dp">

        <TextView
                android:id="@+id/tv_current_title_part"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="0dp"
                android:text="Namm Emolet Yannos"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>
        <TextView
                android:id="@+id/tv_current_editors"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/current_editors"
                android:gravity="center_vertical"
                android:layout_height="0dp"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:padding="10dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingRight="0dp">
            <View
                    android:background="@color/bg_yellow_main"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>

            <Button
                    android:id="@+id/btn_current_viewdownload"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="match_parent"
                    android:text="View PDF"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:background="@color/bg_blue_main"/>

        </LinearLayout>

        <TextView
                android:id="@+id/tv_current_pages"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/current_editors"
                android:gravity="center"
                android:layout_height="0dp"/>
    </LinearLayout>

</LinearLayout>